<div class = "container">

    <div class = "row" id = "title">
        <img src = "/assets/img/burger.PNG"></img>
        <h1>Eat Da Burger!</h1>
    </div>
 
 
	<div class="row">
		<div class="col-md-6 d-flex justify-content-center text-center" id = "cols"> 
			<h3>Available Burgers</h3>
			<ul>
				{{#each burgers}}
					{{#unless this.devoured}}
						<li>
							<h5>{{this.id}}. {{this.burger_name}}
								<form action='burgers/updateOne/{{this.id}}?_method=PUT' method='POST'>
									<input type='hidden' name='devoured' value='true'>
									<button type='submit' class="btn btn-default">Devour it</button>
								</form>
							</h5>
						</li>
					{{/unless}}
				{{/each}}
			</ul>
		</div><!-- end column 1 -->




		<div class="col-md-6 d-flex justify-content-center text-center" id = "cols"> 
			<h3 class="text-muted">Devoured Burgers</h3>
		
				{{#each burgers}}
					{{#if this.devoured}}
						
							<h5 class="text-muted">{{this.id}}. {{this.burger_name}}</h5>
						
					{{/if}}
				{{/each}}
		
		</div><!-- end column 2 -->

	</div>



	<div class="row">
		<div class="col-md-12 text-center">
			<form class="create-update-form" action="burgers/insertOne" method="POST">
				<div class="form-group">
					<!-- <label for="bg">Burger Name:</label> -->
					<textarea type="text" name="name"></textarea><br>
					<button class="btn btn-default" type="submit">Submit</button>
					<h5 class="text-center">Enter a burger you want to eat then click Submit button.</h5>
				</div>
			</form>
		</div>
	</div>



</div>